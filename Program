def process_input():
    name = input("Enter your name: ")
    number_input = input("Enter a number: ")

    try:
        number = float(number_input)
        squared_value = number ** 2
        print(f"Hello, {name}! The square of {number} is {squared_value}.")
    except ValueError:
        print("Please enter a valid number.")

process_input()
